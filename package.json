{
  "name": "lite-fp",
  "version": "0.4.0",
  "description": "Functional programming utilities.",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "bugs": {
    "url": "https://github.com/naoeosavio/lite-fp/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/naoeosavio/lite-fp.git"
  },
  "author": "it is not savio",
  "keywords": [
    "functional-programming",
    "fp",
    "typescript",
    "either",
    "option",
    "maybe",
    "result",
    "adt",
    "algebraic-data-types",
    "utilities"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "lint": "tsc",
    "build": "tsup",
    "format": "biome check --write src",
    "check": "biome check src",
    "ci": "npm run lint && npm run check && npm run build",
    "prepublishOnly": "npm run ci"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "tsup": "8.5.1",
    "typescript": "^5.4.5"
  }
}
